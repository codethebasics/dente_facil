// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  INACTIVE
}

model Usuarios {
  id           String        @id @default(uuid())
  cpfCnpj      String        @unique
  senha        String
  ativo        Status        @default(ACTIVE)
  Enderecos    Enderecos?
  Clientes     Clientes?
  Funcionarios Funcionarios?
  Contatos     Contatos?
}

model Funcionarios {
  id           String        @id @default(uuid())
  matricula    String        @unique
  usuario      Usuarios      @relation(fields: [usuariosId], references: [id])
  usuariosId   String        @unique
  Agendamentos Agendamentos?
}

model Clientes {
  id           String        @id @default(uuid())
  usuariosId   String        @unique
  usuario      Usuarios      @relation(fields: [usuariosId], references: [id])
  Agendamentos Agendamentos?
}

model Enderecos {
  id          String   @id @default(uuid())
  cep         String
  logradouro  String
  complemento String?
  bairro      String
  localidade  String
  uf          String
  usuario     Usuarios @relation(fields: [usuariosId], references: [id])
  usuariosId  String   @unique
}

model Contatos {
  id         String   @id @default(uuid())
  email      String?
  telefone   String?
  usuario    Usuarios @relation(fields: [usuariosId], references: [id])
  usuariosId String   @unique
}

model Servicos {
  id           String        @id @default(uuid())
  nome         String
  descricao    String
  ativo        Status        @default(ACTIVE)
  Agendamentos Agendamentos?
}

model Agendamentos {
  id             String       @id @default(uuid())
  dataHora       DateTime
  cliente        Clientes     @relation(fields: [clientesId], references: [id])
  clientesId     String       @unique
  funcinario     Funcionarios @relation(fields: [funcionariosId], references: [id])
  funcionariosId String       @unique
  servico        Servicos     @relation(fields: [servicosId], references: [id])
  servicosId     String       @unique
}
